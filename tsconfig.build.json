{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "outDir": "lib/",
    "rootDir": "src/",
    "types": []
  },
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/**/*.stories.ts",
    "src/**/*.stories.tsx"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
